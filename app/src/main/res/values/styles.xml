<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title">
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textSize">@dimen/text_main</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="input_style">
        <item name="marginHorizontal">16dp</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:background">@drawable/input_field</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="rounded_corners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
</resources>