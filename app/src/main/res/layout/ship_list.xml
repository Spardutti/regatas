<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  android:layout_marginBottom="50dp"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_shipImg"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/upload_img"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_shipName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_shipImg"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ShipName" />

    <ImageView
        android:id="@+id/image_editShip"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_edit_pen"
        app:tint="@color/lightpurple"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_shipName"
        app:layout_constraintBottom_toBottomOf="@id/text_shipName"
        />


</androidx.constraintlayout.widget.ConstraintLayout>