<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="50dp">


    <ImageView
        android:id="@+id/image_shipImg"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="19.5dp"
        android:background="@drawable/ic_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/text_shipName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/image_shipImg"
        app:layout_constraintStart_toEndOf="@id/image_shipImg"

        app:layout_constraintTop_toTopOf="@id/image_shipImg"
        tools:text="ShipName" />

    <ImageView
        android:id="@+id/image_deleteShip"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:src="@drawable/ic_delete"
        app:tint="@color/background"
        app:layout_constraintBottom_toBottomOf="@id/image_shipImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_shipImg" />


</androidx.constraintlayout.widget.ConstraintLayout>