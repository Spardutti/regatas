<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="50dp">

    <ImageView
        android:paddingTop="10dp"
        android:id="@+id/image_shipImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toBottomOf="@id/image_shipImg"
        app:layout_constraintStart_toEndOf="@id/image_shipImg"
        app:layout_constraintTop_toTopOf="@id/image_shipImg">

        <TextView
            android:id="@+id/text_shipName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="ShipName" />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tiempo: -:-"
            android:textAlignment="center"
            android:textSize="14dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_finish"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="44dp"
        android:src="@drawable/ic_ended"
        app:layout_constraintBottom_toBottomOf="@id/image_shipImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>